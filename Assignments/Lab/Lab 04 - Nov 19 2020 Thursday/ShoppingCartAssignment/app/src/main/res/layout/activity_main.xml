                android:padding="10dp"
                android:text="Empty"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
